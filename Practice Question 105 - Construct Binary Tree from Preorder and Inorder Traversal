/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int preIndex=0;
    Map<Integer,Integer> inOrderTree=new HashMap<Integer,Integer> ();
    public TreeNode buildTree(int[] preorder, int[] inorder) {


        for(int i=0;i<inorder.length;i++){
            inOrderTree.put(inorder[i],i);
        }
        return build(preorder,0,inorder.length-1);
        
    }

    private TreeNode build(int[] preorder,int startIndex,int endIndex){
        if(startIndex>endIndex){
            return null;
        }

        int rootVal=preorder[preIndex++];
        TreeNode root=new TreeNode(rootVal);

        int mid=inOrderTree.get(rootVal);
        root.left=build(preorder,startIndex,mid-1);
        root.right=build(preorder,mid+1,endIndex);

        return root;
    }
}
