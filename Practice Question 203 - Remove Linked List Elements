class Solution {
    public ListNode removeElements(ListNode head, int val) {

        ListNode dummy = new ListNode(0);
        dummy.next = head;

        ListNode prev = dummy;

        while (head != null) {
            if (head.val == val) {
                prev.next = head.next;  // remove node
            } else {
                prev = prev.next;       // move prev only if NOT removed
            }
            head = head.next;
        }

        return dummy.next;
    }
}
