/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public List<List<Integer>> pathSum(TreeNode root, int targetSum) {
        List<List<Integer>> res=new ArrayList<>();
        List<Integer> currentPath=new ArrayList<>();
        sum(root,targetSum,res,currentPath);
        return res;
        
    }

    private void sum(TreeNode root, int targetSum,List<List<Integer>> res,List<Integer>currentPath){
        if(root==null) return;
        currentPath.add(root.val);
        targetSum-=root.val;

        if(root.left==null && root.right==null &&targetSum==0){
            res.add(new ArrayList(currentPath));
        }else{
            sum(root.left,targetSum,res,currentPath);
            sum(root.right,targetSum,res,currentPath);
        }
        
        currentPath.remove(currentPath.size()-1);

    }
}
